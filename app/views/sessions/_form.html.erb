<div class="custom__form signup__form">
  <!-- we specify the scope, the url when submit the form, and local: true -> to use standar HTTP requests-->
  <%= form_with(scope: :session, url: login_path,local: true) do |f| %>
    <p class="custom__input signup__form__field">
      <%= f.label :email, class: 'email' %>
      <%= f.email_field :email, placeholder: 'my-email@example.com', class: 'signup__input' %>
    </p>

    <p class="custom__input signup__form__field">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Enter your password', class: 'signup__input' %>
    </p>

    <p class='custom__buttom'>
      <%= f.submit "Login in" %>
    </p>
  <% end %>
</div>