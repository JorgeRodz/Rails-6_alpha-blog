<div class="categories-container">
  <h1>Category: <%= @category.name %></h1>

  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-primary", id: "user__btn-edit" %>
  <% end %>

  <h3 class="user__show__h3">Articles</h3>

  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => true %>
  </div>

  <%= render "articles/article" %>

  <div class="digg_pagination bottom">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => true %>
  </div>

</div>